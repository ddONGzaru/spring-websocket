<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
	
	<!-- GENERAL CONFIGURATIONS	-->
	<display-name>pg7</display-name>
	
	
	<!-- FILTER(Encoding Filter) -->
	<filter>
    	<filter-name>encodingFilter</filter-name>
    	<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    	<init-param>
      		<param-name>encoding</param-name>
      		<param-value>UTF-8</param-value>
    	</init-param>
    	<init-param>
      		<param-name>forceEncoding</param-name>
      		<param-value>true</param-value>
    	</init-param>
  	</filter>
  	<filter-mapping>
    	<filter-name>encodingFilter</filter-name>
    	<url-pattern>/*</url-pattern>
  	</filter-mapping>
	
	
	<!-- CONTEXT CONFIG CONFIGURATIONS -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
    	<param-value>
	    	classpath:com/epapyrus/sdp/commons/conf/spring/bootstrap.xml	    	
	    </param-value>
  	</context-param>
  	
  	<context-param>
    	<param-name>spring.profiles.active</param-name>
    	<param-value>pg7</param-value>
    	<!-- 
    	<param-value>amqp</param-value> 
    	-->
  	</context-param>
  	
	<context-param>
    	<param-name>webAppRootKey</param-name>
    	<param-value>webapp.root.pg7</param-value>
  	</context-param>
  	
	<!-- 
	<context-param>
    	<param-name>spring.profiles.active</param-name>
    	<param-value>pdf</param-value>
  	</context-param>
  	 -->
  	
  	
  	<!-- CONTEXT LOADER CONFIGURATIONS -->
	<listener>
    	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  	</listener>
  	
  	
  	<!-- SPRING FRAMEWORK DISPATCHER SERVLET CONFIGURATIONS -->
	<servlet>
    	<servlet-name>pg7</servlet-name>
    	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    	<load-on-startup>0</load-on-startup>
  	</servlet>  	  	
	<servlet-mapping>
    	<servlet-name>pg7</servlet-name>
    	<url-pattern>/</url-pattern>
  	</servlet-mapping>
  	  	
  	  	
	<!-- DWR DISPATCHER SERVLET CONFIGURATIONS -->  	  	
  	<servlet>
    	<servlet-name>dwr</servlet-name>
    	<servlet-class>org.directwebremoting.spring.DwrSpringServlet</servlet-class>
    	<init-param>
      		<param-name>debug</param-name>
      		<param-value>true</param-value>
    	</init-param>
    	<init-param>
      		<param-name>crossDomainSessionSecurity</param-name>
      		<param-value>false</param-value>
    	</init-param>
  	</servlet>  	
  	<servlet-mapping>
    	<servlet-name>dwr</servlet-name>
    	<url-pattern>/dwr/*</url-pattern>
  	</servlet-mapping>
  	
  	
  	<!-- LOG4J LOGGER CONFIGURATIONS -->
  	<context-param>
    	<param-name>log4jConfigLocation</param-name>
    	<param-value>WEB-INF/classes/log4j.properties</param-value>
  	</context-param>
  	
  	<listener>
    	<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  	</listener>
  
	
	<!-- INDEX PAGE -->  
  	<welcome-file-list>
    	<welcome-file>index.jsp</welcome-file>
  	</welcome-file-list>
  	
  	
  	<!-- SESSION CONFIGURATIONS -->
  	<session-config>
    	<session-timeout>60</session-timeout>
  	</session-config>
  	
  	
  	<!-- ERROR PAGES CONFIGURATIONS -->
  	<error-page>
    	<exception-type>org.springframework.beans.factory.BeanCreationException</exception-type>
    	<location>/WEB-INF/views/errorLicense.jsp</location>
  	</error-page>
  	<error-page>
    	<exception-type>org.springframework.web.util.NestedServletException</exception-type>
    	<location>/WEB-INF/views/errorLicense.jsp</location>
  	</error-page>
  	<error-page>
    	<error-code>404</error-code>
    	<location>/WEB-INF/views/error_404.jsp</location>
  	</error-page>
  	<error-page>
    	<error-code>500</error-code>
    	<location>/WEB-INF/views/error_500.jsp</location>
  	</error-page>
  	
</web-app>